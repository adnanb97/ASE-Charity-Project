@model CharityData.Models.Payment
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Create";
    var donatingTo = Context.Session.GetString("donatingTo");
    var accountAmount = Context.Session.GetString("AccountFunds");
    var transferringFrom = Context.Session.GetString("TransferringFrom");
    var transferringTo = Context.Session.GetString("TransferringTo");
}

<h2>Donate to @donatingTo</h2>
<p>You want to donate money? Your current balance is: @accountAmount</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userSenderId" class="control-label"></label>
                <input asp-for="userSenderId" class="form-control" readonly="readonly" value=@transferringFrom/>
                <span asp-validation-for="userSenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="organizationReceiverId" class="control-label"></label>
                <input asp-for="organizationReceiverId" class="form-control"  readonly="readonly" value=@transferringTo/>
                <span asp-validation-for="organizationReceiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

