


@model CharityData.Models.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<body>
    <p>Login using form below:</p>
    <form method="post" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="All" class="text-danger"></div>


        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
        @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Password" })
        <!--Remember me: <input asp-for="loginData.RememberMe" type="checkbox" /><br />-->
        <input class="btn btn-default" type="submit" value="Login" />
        <input class="btn btn-default" type="button" value="Register as an User" onclick="@("window.location.href='" + @Url.Action("Create", "Users") + "'");" />
        <input class="btn btn-default" type="button" value="Register as an Organization" onclick="@("window.location.href='" + @Url.Action("Create", "Organizations") + "'");" />
        @Html.AntiForgeryToken()
    </form>
</body>
</html>
