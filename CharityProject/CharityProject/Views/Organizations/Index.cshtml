@model IEnumerable<CharityData.Models.Organization>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<input asp-action="Create" type="button" class="btn btn-default" value="Create new">
</input>
<table class="table">
    <thead>
        <tr class="text-center">
            <th class="text-center">
               Organization name
            </th>
            <th  class="text-center">
                User Account
            </th>
            <th  class="text-center">
                Date of Foundation
            </th>
            <th  class="text-center">
               Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfFounding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
