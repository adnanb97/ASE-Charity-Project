@model CharityData.Models.User

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<h4>User</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" readonly/>
            <div class="form-group">
                <label asp-for="UserAccount" class="control-label"></label>
                <input asp-for="UserAccount" class="form-control" readonly />
                <span asp-validation-for="UserAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input asp-for="firstName" class="form-control " readonly />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" readonly />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label">Gender</label>
                <input asp-for="gender" class="form-control" readonly />
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateOfBirth" class="control-label"></label>
                <input asp-for="dateOfBirth" class="form-control"readonly />
                <span asp-validation-for="dateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creditCardId" class="control-label"></label>
                <input asp-for="creditCardId" class="form-control" readonly/>
                <span asp-validation-for="creditCardId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Image</label>
                <div>
                    <img src="@ViewData["ImageURL"]" height="400">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <h2>History of donated items</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Item name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Value
                </th>
                <th>
                    Action name
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                var donatedItems = ViewBag.items;
                var actDoneted = ViewBag.actDoneted;
                for (int i = 0; i < donatedItems.Count; i++)
                {
                    <tr>
                        <td>
                            @donatedItems[i].name
                        </td>
                        <td>
                            @donatedItems[i].description
                        </td>
                        <td>
                            @donatedItems[i].value
                        </td>
                        <td>
                            @actDoneted[i].name
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
<h2>History of payments</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Name of organization
            </th>
            <th>
                Donated amout
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var payments = ViewBag.payments;
            var organizations = ViewBag.organizations;
            for (int i = 0; i < payments.Count; i++)
            {
                <tr>
                    <td>
                        @organizations[i].name
                    </td>
                    <td>
                        @payments[i].amount
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
    <div>
        <h2>History of actions participated in</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Action name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Organization name
                    </th>
                    <th>
                        Start date and time
                    </th>
                    <th>
                        End date and time
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    var myAction = ViewBag.myActions;
                    var organizedBy = ViewBag.organizedBy;
                    for (int i = 0; i < myAction.Count; i++)
                    {
                        <tr>
                            <td>
                                @myAction[i].name
                            </td>
                            <td>
                                @myAction[i].description
                            </td>
                            <td>
                                @organizedBy[i].name
                            </td>
                            <td>
                                @myAction[i].startDateTime
                            </td>
                            <td>
                                @actDoneted[i].endDateTime
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <input class="btn btn-default" type="button" value="Add item" onclick="@("window.location.href='" + @Url.Action("Create", "Items") + "'");" />
