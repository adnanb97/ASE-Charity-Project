<script>
    function togglediv(id) {
        var div = document.getElementById(id);
        div.style.display = div.style.display == "none" ? "block" : "none";
    }
</script>
<div class="row">
    <div class="col-md-3">
        <button id="activeButton" onclick="togglediv('activeActions')">Show/Hide Active Actions</button>
    </div>
    <div class="col-md-3">
        <button id="pastButton" onclick="togglediv('pastActions')">Show/Hide Past Actions</button>
    </div>
    <div class="col-md-3">
        <button id="futureButton" onclick="togglediv('futureActions')">Show/Hide Future Actions</button>
    </div>
</div>
<div id="activeActions" style="display: none">
    <h2>Active Actions</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Action name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Organization Name
                </th>
                <th>
                    Start date
                </th>
                <th>
                    End date
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                var orgNames = ViewBag.namesOfOrg;
                var actions = ViewBag.activeActions;
                for (int i = 0; i < actions.Count; i++)
                {
                    <tr>
                        <td>
                            @actions[i].name
                        </td>
                        <td>
                            @actions[i].description
                        </td>
                        <td>
                            @orgNames[i]

                        </td>
                        <td>
                            @actions[i].startDateTime
                        </td>
                        <td>
                            @actions[i].endDateTime
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

